<% provide(:title, "#{@food_item.name}") %>
<div class="container">
<h1><%= @food_item.name %></h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for @food_item, html: { multipart: true } do |f| %>

		<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>

		<%= f.label :course %>
		<%= f.select :course, %w[Main Beverage Salad Side], class: 'form-control' %>

		<%= f.label :veg_non_egg %>
		<%= f.select :veg_non_egg, %w[Veg Non-Veg Egg], class: 'form-control' %>

		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control' %>

		<%= f.label :image %><br>
		<%= image_tag @food_item.image.url :medium %>
		<%= f.file_field :image %>

		<%= f.submit "Save food item", class: 'btn btn-primary' %>
	<% end %>
	</div>
</div>
</div>

