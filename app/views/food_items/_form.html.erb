<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @food_item, html: { multipart: true } do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %><br>

			<div class="row">
				<div class="col-md-6">
					<%= f.label :course %>
					<%= f.select :course, %w[Main Beverage Salad Side], {}, { class: 'form-control' } %><br>
				</div>
				<div class="col-md-6">
					<%= f.label :veg_non_egg %>
					<%= f.select :veg_non_egg, %w[Veg Non-Veg Egg], {}, { class: 'form-control' } %><br>
				</div>
			</div>

			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control' %><br>

			<%= f.label :image %><br>
			<%= image_tag @food_item.image.url :medium %><br>
			<%= f.file_field :image %><br>

			<%= f.label :show? %><br>
			<%= f.check_box :show_image %><br>

			<div class="row">
				<h3>Ingredients</h3>
				<%= f.fields_for :ingredients do |ingredient_fields| %>
					<div class="col-md-6">
						<div class="panel panel-default">
							<div class="panel-heading" style="padding: 5px;">
								<%= ingredient_fields.label :raw_material %>
								<%= ingredient_fields.select(:raw_material_id, @raw_materials, {}, { class: 'form-control' }) %>
							</div>
							<div class="panel-body" style="padding: 5px;">
								<div class="col-xs-6">
									<%= ingredient_fields.label :quantity %>
									<%= ingredient_fields.text_field :quantity, class: 'form-control' %>
								</div>
								<div class="col-xs-6">
									<%= ingredient_fields.label :unit %>
									<%= ingredient_fields.text_field :unit, class: 'form-control' %>
								</div>
							</div>
							<div class="panel-footer" style="padding: 5px;">
								<%= ingredient_fields.check_box '_destroy' %>  <%= ingredient_fields.label "Destroy" %>
							</div>
						</div>
					</div>
				<% end %>
			</div>

			<%= f.submit "Save food item", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>
