<% provide(:title, "All kickerrs") %>

<h1>All Kickerrs</h1>

<table class="table table-hover">
	<tr>
		<th>
			Name
		</th>
		<th>
			Main(s)
		</th>
		<th>
			Beverage(s)
		</th>
		<th>
			Salad(s)
		</th>
		<th>
			Side(s)
		</th>
		<th>
			Description
		</th>
		<th>
			Price
		</th>
		<th>
			Actions
		</th>
	</tr>
	<% @kickerrs.each do |kickerr| %>
		<tr>
			<td>
				<%= kickerr.name %>
			</td>
			<td>
				<% kickerr.food_items.where(course: 'Main').each do |food_item| %>
					<%= food_item.name %><br>
				<% end %>
			</td>
			<td>
				<% kickerr.food_items.where(course: 'Beverage').each do |food_item| %>
					<%= food_item.name %><br>
				<% end %>
			</td>
			<td>
				<% kickerr.food_items.where(course: 'Salad').each do |food_item| %>
					<%= food_item.name %><br>
				<% end %>
			</td>
			<td>
				<% kickerr.food_items.where(course: 'Side').each do |food_item| %>
					<%= food_item.name %><br>
				<% end %>
			</td>
			<td>
				<%= kickerr.price %>
			</td>
			<td>
				<%= kickerr.description %>
			</td>
			<td>
				<%= link_to "edit", edit_kickerr_path(kickerr) %>
			</td>
		</tr>
	<% end %>
</table>