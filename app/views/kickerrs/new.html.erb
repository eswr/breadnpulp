<% provide(:title, "New Kickerr") %>

<h1>New Kickerr</h1>

<div class="row">
	<div class="col-md-12">

		<%= form_for (@kickerr) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :price %>
			<%= f.text_field :price, class: 'form-control' %>

			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control' %>

			<div class="field">
		        <div class="field_head">Food items</div>
	        	<%= hidden_field_tag("kickerr[food_item_ids][]", nil) %>
	        	<div class="col-md-3">
	        		<h3>Mains</h3>
					<% FoodItem.where(course: 'Main').each do |food_item| %>
						<label>
							<%= check_box_tag "kickerr[food_item_ids][]", food_item.id, food_item.id.in?(@kickerr.food_items.collect(&:id)) %>
							<%= food_item.name %><br>
							<%= image_tag food_item.image.url :thumb %>
						</label><br>
					<% end %>
				</div>
				<div class="col-md-3">
	        		<h3>Beverages</h3>
					<% FoodItem.where(course: 'Beverage').each do |food_item| %>
						<label>
							<%= check_box_tag "kickerr[food_item_ids][]", food_item.id, food_item.id.in?(@kickerr.food_items.collect(&:id)) %>
							<%= food_item.name %><br>
							<%= image_tag food_item.image.url :thumb %>
						</label><br>
					<% end %>
				</div>
				<div class="col-md-3">
	        		<h3>Salads</h3>
					<% FoodItem.where(course: 'Salad').each do |food_item| %>
						<label>
							<%= check_box_tag "kickerr[food_item_ids][]", food_item.id, food_item.id.in?(@kickerr.food_items.collect(&:id)) %>
							<%= food_item.name %><br>
							<%= image_tag food_item.image.url :thumb %>
						</label><br>
					<% end %>
				</div>
				<div class="col-md-3">
	        		<h3>Sides</h3>
					<% FoodItem.where(course: 'Side').each do |food_item| %>
						<label>
							<%= check_box_tag "kickerr[food_item_ids][]", food_item.id, food_item.id.in?(@kickerr.food_items.collect(&:id)) %>
							<%= food_item.name %><br>
							<%= image_tag food_item.image.url :thumb %>
						</label><br>
					<% end %>
				</div>
			</div>

			<%= f.submit "Create kickerr", class: 'btn btn-primary' %>

		<% end %>
	</div>
</div>
