<% provide(:title, "New Kickerr") %>

<h1>New Kickerr</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<%= form_for (@kickerr) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :price %>
			<%= f.text_field :price, class: 'form-control' %>

			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control' %>

			<div class="field">
			<% FoodItem.all.each do |food_item| %>
				<%= check_box_tag "kickerr[food_item_ids][]", food_item.id %>
				<%= food_item.name %>
			<% end %>
			</div>

			<%= f.submit "Create kickerr", class: 'btn btn-primary' %>

		<% end %>
	</div>
</div>
