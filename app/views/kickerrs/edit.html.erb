<% provide(:title, @kickerr.name) %>

<div class="container">

	<h1><%= @kickerr.name %></h1>

	<div class="row">
		<div class="col-md-12">

			<%= form_for (@kickerr) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control' %><br>

				<%= f.label :price %>
				<%= f.text_field :price, class: 'form-control' %><br>

				<%= f.label :description %>
				<%= f.text_area :description, class: 'form-control' %><br>
		</div>
		<div class="col-md-12">
			<div class="field">
		        <div class="field_head">Food items</div>
	        	<%= hidden_field_tag("kickerr[food_item_ids][]", nil) %>
	        	<% courses_array = ['Main', 'Beverage', 'Salad', 'Side'] %>
	        	<% courses_array.each do |c| %>
		        	<div class="col-md-3">
		        		<h3><%= c %></h3>
						<% FoodItem.where(course: c).each do |food_item| %>
							<label>
								<%= check_box_tag "kickerr[food_item_ids][]", food_item.id, food_item.id.in?(@kickerr.food_items.collect(&:id)) %>
								<%= food_item.name %><br>
							</label><br>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
			<%= f.submit "Update #{@kickerr.name}", class: 'btn btn-primary col-md-12 col-md-4 col-md-offset-4' %>

			<% end %>
	</div>
</div>