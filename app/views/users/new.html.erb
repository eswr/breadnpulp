<% provide(:title, 'Sign up') %>
<div class="container">
<h1>Sign up</h1>
<h3><small> already signed up? <%= link_to "login", login_path %></small></h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: 'form-control' %><br>

      <%= f.label :how_did_you_know_about_us %>
      <%= f.text_field :source, class: 'form-control' %><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.label :password_confirmation, "Confirm password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>

      <%= f.submit "Create my account", class: "btn btn-primary", style: "color: black;" %>
    <% end %>
    <br>
    <br>
    <h3>Or </h3><%= link_to "Sign in with facebook", "/auth/facebook", id: "sign_in", class: 'btn btn-primary', style: "color: black;" %>
  </div>
</div>
</div>