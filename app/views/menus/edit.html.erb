<% provide(:title, "Edit menu") %>
<div class="container">
<h1>Edit menu</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for @menu do |f| %>

		<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :available_on %>
		<%= f.date_field :available_on, class: 'form-control' %>

		<%= f.label "Kickerr" %>
		<h3><%= @menu.kickerr.name %> : <%= @menu.kickerr.kickerr_size %></h3>

		<%= f.label :price %>
		<%= f.text_field :price, class: 'form-control' %>

		<%= f.label :expected_consumption %>
		<%= f.number_field :expected_consumption, class: 'form-control' %>

		<br>
		<%= f.submit "Update menu", class: 'btn btn-primary' %>
	<% end %>
	</div>
</div>
</div>