<% provide(:title, "New menu") %>
<div class="container">
<h1>New menu</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for @menu do |f| %>

		<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :available_on %>
		<%= f.date_field :available_on, class: 'form-control' %>

		<%= f.label "Kickerr" %>
		<%= f.select(:kickerr_id, options_for_select(@kickerrs_array), {}, { class: 'form-control' }) %>

		<%= f.label :price %>
		<%= f.text_field :price, class: 'form-control' %>

		<%= f.label :expected_consumption %>
		<%= f.number_field :expected_consumption, class: 'form-control' %>

		<br>
		<%= f.submit "Create menu", class: 'btn btn-primary' %>
	<% end %>
	</div>
</div>

</div>