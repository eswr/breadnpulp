<% provide(:title, "Log in") %>
<div class="container">
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Via Email</h3>
      </div>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="panel-body">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password %>
          <%= link_to "(forgot password)", new_password_reset_path, class: 'btn btn-primary btn-xs', style: 'color: black;' %>
          <%= f.password_field :password, class: 'form-control' %>

          <div class="col-xs-offset-1">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          </div>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= f.submit "Log in", class: "btn btn-primary", style: "color: black;" %> 
      </div>
    <% end %>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Or Via SMS OTP</h3>
    </div>
    <%= form_for(:otp, url: get_otp_path) do |f| %>
      <div class="panel-body">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>
      <div class="panel-footer">
        <%= f.submit "Send OTP", class: "btn btn-primary", style: "color: black;" %>
      </div>
    <% end %>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Or via Facebook</h3>
    </div>
    <div class="panel-footer">
      <%= link_to "Sign in with facebook", "/auth/facebook", id: "sign_in", class: 'btn btn-primary', style: "color: black;" %>
    </div>
  </div>
    <h2>New user? <%= link_to "Sign up now!", signup_path, class: "btn btn-primary btn-xs", style: "color: black;" %></h2>
  </div>
</div>
</div>