<% provide(:title, "New Order") %>
<div class="container">

<h1><%= dayify @date %> menu</h2>

<div class="row">
	<% @menus.each do |menu| %>
		<%= render menu %>
	<% end %>
</div>	

<%= form_for @delivery do |delivery_form| %>
	
	<%= render 'shared/error_messages', object: delivery_form.object %>
	
	<div class="row">
		<div class="col-md-4">
			<h3>Cart</h3>
			<%= delivery_form.fields_for :packs do |pack_fields| %>
				<%= pack_fields.label :kickerr %>
				<%= pack_fields.select(:menu_id, (@menus.map { |menu| [menu.kickerr.name, menu.id] }), {}, { :class => 'form-control' }) %>
				<br>
				<%= pack_fields.label :quantity %>
				<%= pack_fields.select(:quantity, ((0..10).map {|i| [i,i] }), {}, { :class => 'form-control' }) %>
				<br>
				<br>
				<% if current_user.admin? %>
					<%= pack_fields.label :unit_price %>
					<%= pack_fields.text_field :unit_price %>
					<br>
				<% end %>

			<% end %><br>
		</div>
		<div class="col-md-4">
			<h3>Deliver before</h3>
			<%= delivery_form.select(:at, available_slots.map { |slot| [slot.strftime("%l:%M %p"), slot]}, {}, { :class => 'form-control' }) %>
		</div>

		<div class="col-md-4">
			<%= delivery_form.hidden_field :user_id, :value => @user.id %>
			<h3>Delivery address</h3>
			<%= delivery_form.select(:address_id, ((@delivery.user.addresses.all).map { |addr| [addr.postal_address.split('').first(40).join + '...', addr.id] }), {}, { :class => 'form-control' }) %>
		</div>
	</div>

	<div class="row">
		<% if current_user.admin? %>
			<h3>Admin controls</h3>
			<%= delivery_form.label :delivery_status %>
			<%= delivery_form.select(:delivery_status_id, ((@delivery_statuses).map { |status| [status.name, status.id] })) %>
			<br>
			<%= delivery_form.label :payment_status %>
			<%= delivery_form.select(:payment_status_id, ((@payment_statuses).map { |status| [status.name, status.id] })) %>
			<br>
			<%= delivery_form.label :payment_date %>
			<%= delivery_form.date_field :payment_date %>
			<br>
			<%= delivery_form.label :payment_mode %>
			<%= delivery_form.text_field :payment_mode %>
			<br>
		<% end %>
	</div>

	<div class="col-md-4 col-md-offset-4" style="margin-top: 30px;">
		<%= delivery_form.submit "Place order", class: 'btn btn-primary', style: "color: black;" %>
	</div>
<% end %>

</div>