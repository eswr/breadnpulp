<tr>
	<td>
		<%= delivery.id %><br><%= delivery.delivery_status.name %>
	</td>
	<td>
		<%= delivery.delivery_date %><br><%= (delivery.at - 45.minutes).strftime("%I:%M%p") %>
	</td>
	<td>
		<%= delivery.user.name %><br><%= delivery.user.phone_number %>
	</td>
	<td>
		<%= delivery.address.postal_address %>
	</td>
	<td>
		<%= delivery.payment_date %><br><%= delivery.payment_mode %><br>Rs. <%= delivery.get_total_amount %>
	</td>
	<td>
		<% delivery.packs.each do |pack| %>
			<%= pack.menu.kickerr.name %> : <%= pack.quantity %><br>
		<% end %>
	</td>
	<td>
		<%= link_to "edit", edit_delivery_path(delivery) %>
	</td>
</tr>