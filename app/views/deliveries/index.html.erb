<% provide(:title, "All orders") %>

<h1>All Orders</h1>
<% if current_user.admin? %>
	<%= link_to "New order", new_delivery_path, class: "btn btn-xs", style: "background-color: #fed136; border-color: #ffffff; color: black;" %>
<% end %>

<table class="table table-hover">
	<tr>
		<th>
			Order number
		</th>
		<th>
			Despatch time
		</th>
		<th>
			User details
		</th>
		<th>
			Delivery address
		</th>
		<th>
			Payment details
		</th>
		<th>
			Kickerr details
		</th>
		<th>
			<%= "actions" %>
		</th>
	</tr>
	<%= render @deliveries %>
</table>