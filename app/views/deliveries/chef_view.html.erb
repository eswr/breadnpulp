<% provide(:title, "Chef view") %>

<h1>Chef View</h1>

<%= form_tag do %>
	<%= select_date(date = Date.current, options = {}, html_options = { class: 'col-xs-4' }) %>

	<%= submit_tag "get requirement", class: 'btn btn-primary', style: 'color: black' %>
<% end %>

<table class="table table-hover">
	<%= render 'deliveries/chef_view_header' %>
	<% @rows.each do |row| %>
		<tr>
			<td>
				<%= (row.first - 30.minutes).strftime("%I:%M%p") %>
			</td>
			<td>
				<% row.second.each do |subrow| %>
					<%= subrow.first %> : <%= subrow.second %><br>
				<% end %>
			</td>
		</tr>
	<% end %>
</table>