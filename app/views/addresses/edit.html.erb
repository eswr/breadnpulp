<% provide(:title, "#{@address.name}") %>

<h1><%= "Edit my #{@address.name} address" %></h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @address do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :full_address %>
			<%= f.text_area :full_address, class: 'form-control' %>

			<%= f.label :pincode %>
			<%= f.text_field :pincode, class: 'form-control' %>

			<%= f.submit "Save #{@address.name}!", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>