<div class="col-md-8">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3>Despatches</h3>
		</div>
		<div class="panel-body">
			
		</div>
	</div>
</div>

<div class="col-md-4">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3>Riders</h3>
		</div>
		<div class="panel-body">
			<table class="table table-hover">
				<tr>
					<th class="col-xs-8">
						Rider details
					</th>
					<th class="col-xs-4">
						Status
					</th>
				</tr>
				<% (3..9).each do |i| %>
					<tr>
						<td>
							Rider name <%= i %><br>
							<%= "#{i}"*10 %>
						</td>
						<td>
							<% if i%3 == 0 %>
								Busy<br>
								<%= link_to "mark as Free", "#", class: 'btn btn-success btn-xs' %>
							<% else %>
								Free<br>
								<%= link_to "mark as Busy", "#", class: 'btn btn-warning btn-xs' %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>