<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in" style="margin-bottom:150px"></div>
            <!--<div class="intro-heading">It's Nice To Meet You</div>-->
            <a href="#portfolio" class="page-scroll btn btn-xl" style="padding:10px 40px !important;margin-bottom:10px; color: black;"><%= active_day @date %> Menu</a>
        </div>
    </div>
</header>
<!-- Portfolio Grid Section -->
    <section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row" style="margin:-70px !important;">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"><%= active_day @date %> Menu</h2>
                    <br>
                    <br>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
                <% if @menus.count == 1 %>
                    <% offset = 4 %>
                    <% xs = 12 %>
                    <% sm = 12 %>
                    <% md = 4 %>
                    <% lg = 4 %>
                <% elsif @menus.count == 2 %>
                    <% offset = 2 %>
                    <% xs = 12 %>
                    <% sm = 12 %>
                    <% md = 4 %>
                    <% lg = 4 %>
                <% else %>
                    <% offset = 0 %>
                    <% xs = 12 %>
                    <% sm = 12 %>
                    <% md = 4 %>
                    <% lg = 4 %>
                <% end %>
                <div class="col-xs-<%= offset %> col-sm-<%= offset %> col-md-<%= offset %> col-lg-<%= offset %>"></div>
                <% @menus.each do |menu| %>
                    <%= render menu %>
                <% end %>
                <div class="col-xs-<%= offset %> col-sm-<%= offset %> col-md-<%= offset %> col-lg-<%= offset %>"></div>
                
            </div>
            <div style="text-align: center;">
               
                    <%= link_to "Make an order", new_delivery_path, class: "btn btn-xl text-center", style: "color: black;" %>
                </div>
            </div>
        </div>
    </section>

    
    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading" style="color: #fed136;">Contact Us</h2>
                    <h3 class="section-subheading text-muted">praveen@breadnpulp.com | 75062 44659 | facebook.com/breadnpulp</h3>
                </div>
            </div>
        </div>
    </section>
