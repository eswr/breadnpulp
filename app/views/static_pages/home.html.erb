<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in" style="margin-bottom:150px"></div>
            <!--<div class="intro-heading">It's Nice To Meet You</div>-->
            <a href="#portfolio" class="page-scroll btn btn-xl" style="padding:10px 40px !important;margin-bottom:10px; color: black;"><%= dayify @date %> Menu</a>
        </div>
    </div>
</header>
<!-- Portfolio Grid Section -->
    <section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"><%= dayify @date %> Menu</h2>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
                <% @menus.each do |menu| %>
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <%= render menu %>
                        </div>
                    </div>
                <% end %>        
            </div>
            <div style="text-align: center;">
                <% if logged_in? %>
                    <%= link_to "Make an order", new_delivery_path(:delivery => { user_id: @user.id }), class: "btn btn-xl text-center", style: "color: black;" %>
                <% else %>
                    <%= link_to "Sign Up", new_user_path, class: "btn btn-xl text-center", style: "color: black;" %>
                <% end %>
                </div>
            </div>
        </div>
    </section>

    
    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading" style="color: #fed136;">Contact Us</h2>
                    <h3 class="section-subheading text-muted">praveen@breadnpulp.com | 75062 44659 | facebook.com/breadnpulp</h3>
                </div>
            </div>
        </div>
    </section>
