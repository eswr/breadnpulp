<% provide(:title, "Healthy breakfast everyday") %>
<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in" style="margin-bottom:150px"></div>
            <!--<div class="intro-heading">It's Nice To Meet You</div>-->
            <a href="#portfolio" class="page-scroll btn btn-xl"
                                 style="padding:10px 40px !important;
                                        margin-bottom:10px; color: black;">
                <%= dayify @date %>
            </a>
        </div>
    </div>
</header>

<!-- Portfolio Grid Section -->
<section id="portfolio" class="bg-light-gray" style="padding-top: 80px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <!-- <h1 style="color: red;">
                    Happy New Year!<br>
                    <small>Enjoy our special anti-hangover meals and extend your new year party!!!</small>
                </h1> -->
                <h2><%= dayify @date %></h2>
                <h2><small>Delicious healthy breakfast meal boxes you can come to everyday!</small></h2>
                <h4><small>Available from 7:30 AM till 11:00 AM</small></h4>
            </div>
        </div>
        <div class="row">
            <% @menus.group_by(&:kickerr_name).each do |kickerr_name, menus| %>
                <div class="col-md-4">
                    <div class="row">
                        <%= link_to(render(menus.first),
                                    if logged_in?
                                        new_delivery_path(:delivery => { user_id: current_user.id })
                                    else
                                        login_path
                                    end,
                                    style: 'color: black;'
                            ) %>
                    </div>
                    <div class="row">
                        <% menus.each do |menu| %>
                            <div class="col-xs-6">
                                <h6 class="text-muted" style="text-transform: none; font-size: 130%;"><%= menu.kickerr.kickerr_size %> | <small>Rs. <%= menu.get_price %></small></h6>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
        <div style="text-align: center;">
            <% if logged_in? %>
                <%= link_to "Make an order", new_delivery_path(:delivery => { user_id: current_user.id }), class: "btn btn-xl text-center", style: "color: black;" %>
            <% else %>
                <%= link_to "Sign Up", new_user_path, class: "btn btn-xl text-center", style: "color: black;" %>
                <%= link_to "Log in", login_path, class: "btn btn-xl text-center", style: "color: black;" %>
            <% end %>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="text-center">
            <h2>Partners</h2>
            <div class="col-md-2 col-md-offset-5" style="padding-top: 50px;">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h5>Communications</h5>
                    </div>
                    <div class="panel-body">
            <a href="https://msg91.com/startups/?utm_source=startup-banner"><img src="https://msg91.com/images/startups/msg91Badge.png" width="120" height="90" title="MSG91 - SMS for Startups" alt="Bulk SMS - MSG91"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading" style="color: #fed136;">Contact Us</h2>
                <h3 class="section-subheading text-muted" style="color: white;">praveen@breadnpulp.com | +91-750-6244-659 | facebook.com/breadnpulp</h3>
            </div>
        </div>
    </div>
</section>